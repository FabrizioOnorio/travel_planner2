<div class="header">
  <!-- title and stuff -->
  <h1 class="title">Trip to <%=@trip.destination%></h1>
</div>
<div class="container-show">
  <div class="show-card">
    <!-- date only is hard coded-->
    <div class="date">

    </div>
    <!-- flags and the name of the country -> change this to a flexbox-->

    <div class="flexbox-panel">
      <div class="flex-item">
        <% c = ISO3166::Country.find_country_by_name(@trip.home) %>
        <img src="https://www.countryflags.io/<%= c.alpha2 %>/flat/64.png" class="img-show-page-flag-flights">
        <p><%= @trip.home %></p>
      </div>
      <div class="flex-item">
        <%= image_tag "arrow.png", class:"img-show-page-arrow-flights" %>
      </div>
      <div class="flex-item">
        <% c = ISO3166::Country.find_country_by_name(@trip.destination) %>
        <img src="https://www.countryflags.io/<%= c.alpha2 %>/flat/64.png" class="img-show-page-flag-flights">
        <p><%= @trip.destination %></p>
      </div>
    </div>
    <!-- icons and the requirements (dashboard) e.g. quarantine -->
    <div class="icons_overview">
      <div class="box_a">
        <%# <%= image_tag "house.png", class:"img-show-page" %>
        <i class="fas fa-home"></i>
      </div>
      <div class="box_text">
        <p class="font_text">up to 14 days</p>
      </div>
      <div class="box-empty-1">
      </div>
     <div class="box_c">
        <%# <%= image_tag "mask.png", class:"img-show-page" %>
        <i class="fas fa-head-side-mask"></i>
      </div>
      <div class="box_text">
        <p class="font_text"><%= @mask_required %></p>
      </div>
    </div>
        <div class="box_e">
          <i class="fas fa-vial"></i>
        <div class="box_text">
          <p class="font_text"><%= @test_type %></p>
        </div>
      </div>
    <!-- all the other information -->
    <div class="further_info">

      <ul>
      <li><strong>Test required?</strong> <%= @test_required %> </li><br>
      <li><strong>Test type:</strong> <%= @test_type %></li><br>
      <li><strong>When do you have to take a test:</strong> <%= @when_to_test %></li><br>
      <li><strong>Test type:</strong> <%= @test_type %></li><br>
      <li><strong>Read more infos on the test:</strong> <%= @test_more_infos.html_safe %></li><br>
      <li><strong>Read more infos on the quarantine:</strong> <%= @quarantine_more_infos.html_safe %></li><br>
      <li><strong>Exit requirments:</strong><%= @exit_requirments.html_safe %> </li><br>
      <li><strong>More infos on the exit rules:</strong> <%= link_to "#{@exit_rules_link}", @exit_rules_link %></li>
      </ul>

    </div>
  </div>
</div>
<div class="nav-bar">
  <!-- nav-bar -->
</div>
