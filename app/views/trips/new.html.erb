<div class="container">

  <h1>New trip</h1>
  <%= link_to 'Cancel', root_path,  class: "cancel-link" %>
      <div class="top-mark">
      <svg width="148" height="26" viewBox="0 0 148 26" fill="none" xmlns="http://www.w3.org/2000/svg">
      <line x1="3" y1="13.5" x2="137" y2="13.5" stroke="#C4C4C4" stroke-width="7"/>
      <circle cx="13" cy="13" r="13" fill="#C4C4C4"/>
      <circle cx="135" cy="13" r="13" fill="#C4C4C4"/>
      <circle cx="13" cy="13" r="10" fill="#23786B"/>
      </svg>
    </div>

  <div class="form">
    <%= simple_form_for [ @trip ] do |f| %>
      <%= f.input :home, label: 'From:', input_html: { class: ["input-class", "algolia_search"] }, label_html: { class: "nice-class" }%>
      <%= f.input :destination, label: 'To:', input_html: { class: ["input-class", "algolia_search"] }, label_html: { class: "nice-class" } %>
      <%= f.button :submit, 'Next', class:"button" %>
    <% end %>
  </div>
</div>
