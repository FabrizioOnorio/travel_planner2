      </div>
      <div class="box_text">
        <p class="font_text"><%= @mask_required_destination %></p>
      </div>
    </div>
        <div class="box_e">
          <i class="fas fa-vial"></i>
        <div class="box_text">
          <p class="font_text"><%= @test_type_destination %></p>
        </div>
      </div>
      <ul>
      <li><strong>Test required?</strong> <%= @test_required_destination %> </li><br>
      <li><strong>Test type:</strong> <%= @test_type_destination %></li><br>
