<div class="container-show d-flex justify-content-between">
  <p style="padding-top: 26px; margin-bottom:  32px; color: #23786B;">Hi, <%= current_user.name %>!</p>
  <h1 style="color: black; padding-top: 26px; font-size:24px;">Your Trips</h1>
</div>

<div class="cards">
  <% @trips.each do |t| %>
    <%= link_to (trip_path(t)) do %>
      <div class="card">
        <p class="">Destination:</p>
        <h2><%= "#{t.destination}" %></h2>
        <div class="flags">
          <% c = ISO3166::Country.find_country_by_name("#{t.home}") %>
          <img src="https://www.countryflags.io/<%= c.alpha2 %>/flat/64.png" class="flag-index">
          <i>ðŸ›«</i>
          <% c = ISO3166::Country.find_country_by_name("#{t.destination}") %>
          <img src="https://www.countryflags.io/<%= c.alpha2 %>/flat/64.png" class="flag-index">
        </div>
         <p id="description">Review your trip</p>
      </div>
    <% end %>
  <% end %>

</div>
