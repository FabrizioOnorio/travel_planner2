<div class="container">
        <div class="profile">
        <div id="upper-bar-main" id="home" >
          <p>@<%= @user.name %></p>
        </div>
        <% if @user.photo.attached? %>
            <%= cl_image_tag @user.photo.key, height: 400, width: 400, crop: :fill, class: "profile-img" %>
          <% else %>
            <img class= "profile-img" src="https://www.pngkey.com/png/full/157-1579943_no-profile-picture-round.png" alt="">
          <% end %>
            <div class="user-info">
            <div class="inf">
                <p>Email</p>
                <h3><%= @user.email %></h3>
            </div>
            <div class="inf">
                <p>Country</p>
                <h3>Germany</h3>
            </div>
            <div class="inf">
                <p>Vaccination status</p>
                <h3>Fully vaccinated</h3>
            </div>
        </div>
    <%= link_to "Sign out", destroy_user_session_path, :method => 'delete', class: 'flight-submit' %>
    </div>

</div>
